@model AspMvcPizzaShop.Models.ViewImage

<<h2>Добавление Пиццы</h2>
<form asp-action="CreatePizza" asp-controller="home" method="post" enctype="multipart/form-data">
    <p>
        <input name="Avatar" type="file" class="form-control" />
    </p>
    <p>
        <label asp-for="Pizzas.Name">Название</label><br />
        <input type="text" asp-for="Pizzas.Name"/>
    </p>
    <p>
        <label asp-for="Pizzas.Size">Размер</label><br />
        <input type="text" asp-for="Pizzas.Size"/>1
    </p>
    <p>
        <label asp-for="Pizzas.Price">Цена</label><br />
        <input type="text" asp-for="Pizzas.Price"/>
    </p>
    <p>
        <label asp-for="Pizzas.Weight">Масса</label><br />
        <input type="text" asp-for="Pizzas.Weight"/>
    </p>
    <p>
        <label asp-for="Pizzas.Ingred.Ananas">Есть ли ананас</label><br />
        <input type="checkbox"  asp-for="Pizzas.Ingred.Ananas"/>
    </p>
    <p>
        <label asp-for="Pizzas.Ingred.Sausage">Есть ли колбаса</label><br />
        <input type="checkbox"  asp-for="Pizzas.Ingred.Sausage"/>
    </p>
    <p>
        <label asp-for="Pizzas.Ingred.DoubleCheese">Двойной сыр</label><br />
        <input type="checkbox"  asp-for="Pizzas.Ingred.DoubleCheese"/>
    </p>
     <p>
        <label asp-for="Pizzas.Ingred.Mushrooms">Есть ли грибы</label><br />
        <input type="checkbox"  asp-for="Pizzas.Ingred.Mushrooms"/>
    </p>
    <p>
        <input type="submit" value="Отправить" />
    </p>
</form>